@using EcoCentre.Models.Infrastructure
<!DOCTYPE html>
<html lang="en">
@Html.Partial("_HtmlHeader")
<body class="empty-background">
	@Html.Partial("_Header")
	<div class="row-fluid">
		<hr />

		<div id="app">
			@RenderBody()

			<div class="modal hide fade" id="show-dat-modal">
				<div class="modal-header">
					<button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
					<h3>Modal header</h3>
				</div>
				<div class="modal-body">
					<p>One fine body…</p>
				</div>
				<div class="modal-footer">
					<a href="#" class="btn">Close</a>
					<a href="#" class="btn btn-primary">Save changes</a>
				</div>
			</div>
		</div>

	</div>
	<script src="/Scripts/lib/jquery-1.9.1.js"></script>
	<script src="/Scripts/lib/jquery-ui-1.9.2.custom.min.js"></script>
	<script src="/Scripts/lib/date.js"></script>
	<script src="/Scripts/lib/underscore.min.js"></script>
	<script src="/Scripts/lib/backbone.min.js"></script>
	<script src="/Scripts/lib/knockout-3.2.0.js"></script>
	<script src="/Scripts/lib/knockback.min.js"></script>
	<script src="/Scripts/lib/knockback-page-navigator-panes.js"></script>
	<script src="/Scripts/lib/bignumber.min.js"></script>
	<script src="@Url.StaticFile("/Scripts/eco.js")"></script>

	<script src="/Scripts/lib/bootstrap.js"></script>
	<script>
		$(document).ready(function () {
			var m = eco.require('login');
			m.setup();
		});
	</script>

	@RenderSection("PageScripts", false)

	<div class="fade in" id="global-loading-fade" data-keyboard="false"
		 data-backdrop="static" aria-hidden="true"
		 style="background-image:url('../../styles/img/global-loader.gif');background-position:center;background-repeat:no-repeat"></div>
</body>
</html>

