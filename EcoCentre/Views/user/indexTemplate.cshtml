@inherits EcoCentre.Web.EcoWebPageView
<h1>
    @EcoCentre.Resources.Model.User.UserList
<a class="btn btn-large btn-success" data-bind="click:onNew">@EcoCentre.Resources.Model.User.NewUser</a>
</h1>

<table class="table table-striped table-bordered" id='client-list' style="width: 100%;">
    <thead>
        <tr>
	        <th>@EcoCentre.Resources.Model.User.Username</th>
	        <th>@EcoCentre.Resources.Model.User.LoginAlertEnabledColumn</th>
            <th>@EcoCentre.Resources.Model.User.GlobalAdmin</th>
            <th>@EcoCentre.Resources.Model.User.Admin</th>
            <th>@EcoCentre.Resources.Model.User.ReadOnly</th>
            <th></th>
        </tr>

    </thead>
    <tbody data-bind='foreach:items'>
        <tr>
	        <td data-bind='text:Login'></td>
	        <td data-bind='text:IsLoginAlertEnabled'></td>
            <td data-bind='text:IsGlobalAdmin'>Oui</td>
            <td data-bind='text:IsAdmin'>Oui</td>
            <td data-bind='text:IsReadOnly'>Oui</td>
            <td>
                <a data-bind='click:$parent.onEdit' class='btn'>@EcoCentre.Resources.Forms.Edit</a>
                <a data-bind='click:$parent.onRemove' class='btn'>@EcoCentre.Resources.Forms.Delete</a>
            </td>
        </tr>
    </tbody>
</table>
