@{
    Layout = "~/Views/Shared/EmptyLayout.cshtml";
}
<div class="form-horizontal single-form" id='setup-form'>
    <h2>Setup</h2>
    <form method="POST">
        <div class="control-group">
            <input type="text" name="login" placeholder="admin login" class="input-xlarge">
        </div>
        <div class="control-group">
            <input type="password" name='password' placeholder="Password" class="input-xlarge">
        </div>
        <div class="control-group">
            <input type="submit" class="btn btn-large btn-primary" value="Setup"/>
        </div>
    </form>
</div>
