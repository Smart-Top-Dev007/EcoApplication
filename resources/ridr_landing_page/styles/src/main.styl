body
	padding 0 5px

.pagination ul li
	a
	span
		cursor pointer

.invoice-block
	border 1px solid #E3E3E3;
	padding: 0 10px
	margin-bottom 20px

#new-invoice
	h3
		border-bottom 1px solid #aaa;
		line-height 30px
		a
			margin-top -8px
	.materials table 
		td
			vertical-align middle
		&.materials-available
			tbody tr
				cursor pointer
		.input-append
			display block
#user-show
	.progress
		margin-bottom 0
	table td
		vertical-align middle
tr.clickable
	cursor pointer
	td
		vertical-align middle
.static-input
	padding-top 5px
	margin-bottom 5px
	display inline-block
	font-weight bold
.single-form
	background-color #FFFFFF
	border 1px solid #E5E5E5
	border-radius 5px 5px 5px 5px
	box-shadow 0 1px 2px rgba(0, 0, 0, 0.05)
	margin 0 auto 20px
	max-width 300px
	padding 19px 29px 29px
body.empty-background
	background-color #F5F5F5
	.empty-header
		background-color white
		border-bottom 1px solid #E5E5E5
		box-shadow 0 1px 2px rgba(0, 0, 0, .05)
		height 70px
		margin-bottom 100px
.ajax-message-holder
	position relative
	.ajax-message
		position absolute
		top 10px
		left 50%
		width 200px 
		margin-left -120px
		box-shadow 0 1px 2px rgba(0, 0, 0, 0.05)
.invoice-content-section
	border-bottom 1px solid #ddd
	margin-bottom: 10px;
	box-shadow 0 1px 4px rgba(0, 0, 0, 0.065)

#facture-view
	max-width 600px
	margin 0 auto
	border 1px solid #ddd
	padding 25px
	box-shadow 0 2px 6px rgba(0, 0, 0, 0.065)
	.logo
		text-align center
	.header
		font-size: 16px
		font-weight 600
		text-align center;
	.factureNo
		margin 25px 0 
		border-bottom 1px solid #ddd;

td.non-clickale
	cursor normal
.well form
	margin-bottom 0

.sortable
	cursor pointer
	&:hover
		text-decoration underline
.custom-cat-name
	color #aaa
table td.number
	text-align right
h1 a 
	margin-left 20px